{
  "name": "pomodoro-focus",
  "version": "1.0.0",
  "description": "A premium, minimal Pomodoro timer with streak tracking",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run server\" \"electron .\"",
    "server": "node server.js",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build": "electron-builder --win --mac"
  },
  "build": {
    "appId": "com.pomodoro.focus",
    "productName": "Pomodoro Focus",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico"
    }
  },
  "keywords": ["pomodoro", "timer", "productivity", "focus"],
  "author": "You",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "redis": "^4.6.12",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2"
  }
}
